

generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     Role    @default(USER)
  orders   Order[]
}

enum Role {
  USER
  BARISTA
}

model MenuItem {
  item_id    Int         @id @default(autoincrement())
  name       String
  price      Float
  img        String
  orderItems OrderItem[]
}

model Order {
  id          Int         @id @default(autoincrement())
  status      OrderStatus @default(PENDING)
  totalPrice  Float
  createdAt   DateTime    @default(now())
  completedAt DateTime?
  orderitem   OrderItem[]
  User        User?       @relation(fields: [userId], references: [id])
  userId      Int?
}

enum OrderStatus {
  READY
  PENDING
  CANCELED
}

model OrderItem {
  id             Int       @id @default(autoincrement())
  quantity       Int
  totalPriceItem Float
  menuItem       MenuItem? @relation(fields: [menuItemId], references: [item_id])
  menuItemId     Int?
  order          Order?    @relation(fields: [orderId], references: [id])
  orderId        Int?
}
