generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(USER)
  orders    Order[]
}

enum Role {
  USER
  BARISTA
}

model MenuItem {
  item_id    Int         @id @default(autoincrement())
  name       String
  price      Decimal     @db.Decimal(10, 2)
  img        String
  orderItems OrderItem[]
}

model Order {
  order_id    Int         @id @default(autoincrement())
  status      OrderStatus @default(PENDING)
  totalPrice  Decimal     @db.Decimal(10, 2)
  createdAt   DateTime    @default(now())
  completedAt DateTime?
  orderItems  OrderItem[]
  User        User?       @relation(fields: [userId], references: [id])
  userId      Int?
}

enum OrderStatus {
  PENDING
  PREPARING
  READY
  COMPLETED
  CANCELED
}

model OrderItem {
  id                Int                @id @default(autoincrement())
  qty               Int
  totalPriceItem    Decimal            @db.Decimal(10, 2)
  menuItem          MenuItem?          @relation(fields: [menuItemId], references: [item_id])
  menuItemId        Int?
  order             Order?             @relation(fields: [orderId], references: [order_id])
  orderId           Int?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  orderItemToppings OrderItemTopping[]
}

model Topping {
  id           Int      @id @default(autoincrement())
  name         String
  priceTopping Decimal  @db.Decimal(10, 2)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  orderItemToppings OrderItemTopping[]
}

model OrderItemTopping {
  orderItemId Int
  toppingId   Int

  orderItems OrderItem @relation(fields: [orderItemId], references: [id])
  topping    Topping   @relation(fields: [toppingId], references: [id])

  @@id([orderItemId, toppingId])
}
